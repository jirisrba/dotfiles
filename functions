#!/usr/bin/env bash

# man color pages
function man() {
  env \
    LESS_TERMCAP_mb=$(printf "\e[1;31m") \
    LESS_TERMCAP_md=$(printf "\e[1;38;5;74m") \
    LESS_TERMCAP_so=$(printf "\e[38;5;246m") \
    LESS_TERMCAP_us=$(printf "\e[04;38;5;146m") \
    LESS_TERMCAP_me=$(printf "\e[0m") \
    LESS_TERMCAP_ue=$(printf "\e[0m") \
    LESS_TERMCAP_se=$(printf "\e[0m") \
    man "$@"
}

# git
function gac() {
  if [[ -z "$*" ]]; then
    echo "Error: Commit message required"
    return 1
  fi
  git add -A && git commit -m "$*" && git push --follow-tags
}

function gcf() {
  # gcf --no-verify
  git add -A && git commit --fixup=HEAD "$@" &&
    git rebase -i --autosquash $(basename $(git symbolic-ref --short refs/remotes/origin/HEAD)) &&
    git push --follow-tags --force-with-lease
}

# Create PR for Github
function ghprc() {
  num_commits=$(git rev-list --count HEAD ^origin)
  if [[ $num_commits -gt 1 ]]; then
    gh pr create --fill --title "$(git branch --show-current)"
  else
    gh pr create --title "$(git branch --show-current)" --body "$(git log --pretty=format:%s HEAD ^origin)"
  fi
}

# Open current PR in browser
function ghpr() {
  gh pr view --web
}

# MacOS update
function update() {
  #local gisty="gisty pull_all; gisty sync_delete"
  # echo mackup backup -f
  # mackup backup -f || echo "Warning: mackup backup failed, continuing..."

  echo backup drafts
  if [[ -d ~/icloud/drafts ]]; then
    7z a ~/icloud/drafts.$(date -u +%Y-%m-%dT%H%M%S).7z ~/icloud/drafts
  else
    echo "Warning: ~/icloud/drafts directory not found, skipping..."
  fi

  echo brew upgrade
  brew update --auto-update &&
    brew upgrade &&
    brew cleanup
  echo tldr --update
  tldr --update
  echo softwareupdate
  softwareupdate -i -a

  echo pipx upgrade all packages
  if command -v pipx &> /dev/null; then
    pipx upgrade-all
  else
    echo "Warning: pipx not found, skipping..."
  fi

  #echo npm update
  # npm install npm -g && npm update -g

  #echo gem update
  #sudo gem update --system -n /usr/local/bin/gem && \
  #  sudo -H gem update -n /usr/local/bin && \
  #  sudo -H gem cleanup
}

# Terraform workspace operations
function tfw() {
  if [[ -z "$1" ]]; then
    terraform workspace list
  else
    terraform workspace select "$1" || terraform workspace new "$1"
  fi
}

# Quick secret decode from Kubernetes
function kdecode() {
  kubectl get secret "$1" -o json | jq -r '.data | map_values(@base64d)'
}
