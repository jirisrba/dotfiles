[user]
	name = Jiri Srba
	email = jsrba@csas.cz
[core]
	editor = subl -n -w
	autocrlf = input
	safecrlf = false
  excludesfile = C:\\Users\\sol60210\\.gitignore_global
[mergetool "sublime"]
  cmd = subl -w $MERGED
  trustExitCode = false
[merge]
  tool = sublime
[apply]
  whitespace = nowarn
[color]
	ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[push]
	default = simple
[credential]
	helper = osxkeychain
