[user]
name = Jiri Srba
email = jiri.srba@cloudtalk.io

[core]
editor = code -w
autocrlf = input
safecrlf = false
excludesFile = ~/.gitignore_global
pager = delta

[merge]
tool = vscode

[mergetool "vscode"]
cmd = code --wait $MERGED

[diff]
tool = vscode

[difftool "vscode"]
cmd = code --wait --diff $LOCAL $REMOTE
[apply]
whitespace = nowarn
[color]
ui = auto
branch = auto
diff = auto
status = auto
[color "branch"]
current = yellow reverse
local = yellow
remote = green
[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
[color "status"]
added = yellow
changed = green
untracked = cyan
[push]
default = simple
	autoSetupRemote = true
[credential]
helper = osxkeychain
[init]
defaultBranch = main
[fetch]
prune = true
[rebase]
autosquash = true

[delta]
syntax-theme = Dracula
plus-style = bold syntax "#002800"

[interactive]
diffFilter = delta --color-only
