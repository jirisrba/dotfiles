# personal aliases
# For a full list of active aliases, run `alias`.

# global bash aliases
alias ls='ls -G -h'
alias ll='eza -lF --header --git'
alias llt='eza -ld --git --sort=modified'
alias lltr='ls -lhrt | tail'
alias la='eza -lbhHigUmuSa --time-style=long-iso --git --color-scale'
alias diff='colordiff'
alias rg='rg --smart-case --no-heading --color=always -g \!README.md'
alias dush='du -sh * | sort -h'
alias my-public-ip='curl ifconfig.me'
alias w='curl "wttr.in/Prague?1"'
alias pw='pwgen -s -1 32 1'
alias isodate='date +%Y%m%dT%H%M%S'
alias lg='lazygit'
alias stern='stern --tail 20'

# macos alias
alias nc='netcat'
alias err="log show --predicate 'messageType == error' --style syslog --info --last 1m | cut -c 1-22,43-999"
alias vpnx='scutil --nc stop "CloudTalk VPN"'

# vscode
alias vs='code'
export EDITOR="code --wait"
export VISUAL="code --wait"

# git alias
# source: https://github.com/robbyrussell/oh-my-zsh/blob/master/plugins/git/git.plugin.zsh
alias g='git'
alias gl="git log --graph --pretty=format:'%C(auto)%h -%d %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gpl='git pull --all'
alias gp='git push --follow-tags'
alias ga='git add -A'
alias grbi='git rebase -i --autosquash'
alias grbd='git pull origin $(basename $(git symbolic-ref --short refs/remotes/origin/HEAD)) --rebase'
alias gswd='git switch $(basename $(git symbolic-ref --short refs/remotes/origin/HEAD)) && git pull --all'
alias gprn='npx git-removed-branches --prune --force ; git branch'

# github cli
alias ghpre='gh pr edit $(gh pr view --json number --jq '.number') --title "$(git branch --show-current)" --body "$(git log --pretty=format:%s HEAD ^origin)"'

# git unalias from plugins
unalias gcf 2>/dev/null # replaced with function
unalias gh 2>/dev/null # github cli

# docker alias
alias d=docker

# kubectl aliases
# Base aliases
alias k='kubecolor --force-colors'
alias kubectl='kubecolor --force-colors'
alias kx='kubectx'
alias kn='kubens'

# Override kubectl plugin aliases with --force-colors
alias kg='kubecolor --force-colors get'
alias kgp='kubecolor --force-colors get pods'
alias kgd='kubecolor --force-colors get deployment'
alias kgs='kubecolor --force-colors get svc'
alias kgn='kubecolor --force-colors get nodes'
alias kgns='kubecolor --force-colors get namespaces'
alias kgi='kubecolor --force-colors get ingress'
alias kds='kubecolor --force-colors describe'

# Custom kubectl aliases
alias kgng='kubecolor --force-colors get nodes --label-columns=node.kubernetes.io/instance-type,nodegroup'
alias kga='kubecolor --force-colors get all,cm,secret,externalsecret,ing'
alias kgpf='kubecolor --force-colors get pod --field-selector=status.phase!=Running,status.phase!=Succeeded'
alias kgir='kubecolor --force-colors get ingressroute'
alias kges='kubecolor --force-colors get externalsecret'
alias kgev='kubecolor --force-colors get events --sort-by=.metadata.creationTimestamp'
alias kd='kubecolor --force-colors describe'
alias kl='kubecolor --force-colors logs --tail 100'
alias klf='kubecolor --force-colors logs --tail 20 -f'
alias kbb='kubectl run -it --rm busybox --image=busybox --restart=Never -- sh'
alias kbbc='kubectl run curl --image=curlimages/curl -it --rm --restart=Never -- sh'

# global aliases
alias -g OY="--output yaml"
alias -g LL=' |& less -R'
alias -g GG=' |& rg'

# AWS aliases
alias awss='aws sso login'

# AWS gossm
# https://github.com/gjbae1212/gossm
alias ssm='gossm start --profile ${AWS_PROFILE:-default}'
alias ssm-us='gossm start --profile ${AWS_PROFILE:-default} --region us-east-1'
alias ssm-ap='gossm start --profile ${AWS_PROFILE:-default} --region ap-southeast-1'
alias ssm-sy='gossm start --profile ${AWS_PROFILE:-default} --region ap-southeast-2'

# AI tool aliases
## Claude code aliases
alias cc="claude"
alias cc-quick="claude -p"                          # Quick queries (print mode, no interactive)
alias cc-continue="claude -c"                       # Continue last conversation

## OpenCode aliases
alias oc='opencode'
alias occ='opencode --continue'
