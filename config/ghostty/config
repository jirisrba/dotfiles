# Font
font-family = "JetBrains Mono"
# font-family = "Fira Code"
font-size = 14

# Dracula Theme
theme = Dracula
window-theme = ghostty

# Pravé tlačítko myši = paste
copy-on-select = clipboard
right-click-action = paste

# Hotkey window (F12)
keybind = global:f12=toggle_visibility
# keybind = global:f12=toggle_quick_terminal

window-decoration = true

# Quick terminal positioning (for F12 hotkey window)
quick-terminal-position = top
quick-terminal-screen = main

# Window padding (jako iTerm2 margins)
window-padding-x = 10
window-padding-y = 10

# Splits support (místo tmux)
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+w=close_surface

# Tab support
keybind = cmd+t=new_tab
keybind = cmd+shift+left_bracket=previous_tab
keybind = cmd+shift+right_bracket=next_tab

# macOS specific
macos-option-as-alt = true

auto-update = check

# Shell integration (pro working directory tracking, command status)
shell-integration = detect
shell-integration-features = cursor,sudo,title

# Scrollback pro dlouhe logy (default je 10000)
scrollback-limit = 100000

# Mouse support pro vim/less
mouse-hide-while-typing = true

# Clipboard settings pro DevOps prace
clipboard-read = allow
clipboard-write = allow

# Performance tuning
resize-overlay = never
resize-overlay-duration = 0

# Clear scrollback (pro clean view po dlouhych logech)
keybind = cmd+k=clear_screen

# Quick access to config
keybind = cmd+comma=reload_config
